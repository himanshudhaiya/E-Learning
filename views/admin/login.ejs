  <body>
    <div class="loader"></div>
    <div id="app">
      <section class="section">
        <div class="container mt-5">
          <div class="card card-primary">
            <div class="row">
              <div class="col-12 col-lg-6 col-md-6 col-sm-6 login-img">
                <h1>LOGO</h1>
              </div>
              <div class="col-12 col-lg-6 col-md-6 col-sm-6">
                <div class="login-card">
                  <h2>Login Here !</h2>
                  <form id="form" style="width: 60%">
                    <div class="form-group d-flex">
                      <i
                        class="fa-2x fa-solid fa-user"
                        style="color: rgb(83, 78, 78)"
                      ></i>
                      <input
                        type="text"
                        class="form-control usrername"
                        name="usrername"
                        id="username"
                        placeholder="Username"
                        required
                      />
                    </div>
                    <div class="form-group d-flex">
                      <i
                        class="fa-2x fa-solid fa-lock"
                        style="color: rgb(83, 78, 78)"
                      ></i>
                      <input
                        type="password"
                        class="form-control password"
                        name="password"
                        id="password"
                        placeholder="Password"
                        required
                      />
                    </div>
                    <div class="form-group forget-pass ml-5">
                      <button
                        type="submit "
                        class="btn btn-primary btn-block ml-5"
                        style="width: 50%"
                      >
                        Login
                      </button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
