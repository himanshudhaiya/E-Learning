<script>
  $(document).ready(function () {
    $("#example").DataTable();
  });

  var uploadexcelform = $("#uploadexcel");

  uploadexcelform.on("submit", addquestionssubmitHandler);

  function addquestionssubmitHandler(e) {
    e.preventDefault();

    // vaidation
    if ($("#excel").get(0).files.length === 0) {
      alert("No files selected");
      return false;
    }

    // PREPARE FORM DATA
    var formData = new FormData($("#uploadexcel")[0]);
    formData.append("id", getUrlParameter("id"));
    console.log(formData);

    // DO POST
    $.ajax({
      type: "POST",
      cache: false,
      enctype: "multipart/form-data",
      processData: false,
      contentType: false,
      url: "/admin/quiz/import_excel",
      data: formData,
    })
      .done((res) => {
        if (res.error == true) {
          renderToast({ message: res.message, icon: "error" });
        } else {
          renderToast({ message: res.message, icon: "success" });
          setTimeout(() => {
            window.location.reload();
          }, 1000);
        }
      })
      .fail(function (xhr, status, error) {
        console.log(xhr.responseText);
      });
  }
</script>
